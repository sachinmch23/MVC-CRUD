
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.8.2/angular.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-route/1.8.3/angular-route.min.js" integrity="sha512-y1qD3hz/IAf8W4+/UMLZ+CN6LIoUGi7srWJ3r1R17Hid8x0yXe+1B5ZelkaL1Mjzedzu0Cg3HBvDG02SAgSzBw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="~/AngularJs/Module.js"></script>
    <script src="~/AngularJs/Service.js"></script>
    <script src="~/AngularJs/EmployeeController.js"></script>

</head>
<body  ng-app="sachin" ng-controller="emp">
    <div> 
        <h1>Hello World {{test}}
        </h1>
        <div class="container">
            <div class="row">
                <div class="col-sm-6">
                    <h3>Enter Employee Details</h3>
                    <table class="table">
                        <tr>
                            <th>Name</th>
                            <td>
                                <input type="text" placeholder="Enter Name" class="form-control" ng-model="name" />
                                {{name}}
                            </td>
                        </tr>
                        <tr>
                            <th>Mobile</th>
                            <td>
                                <input type="number" placeholder="Enter Mobile" class="form-control" ng-model="mobile"/>
                               
                            </td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>
                                <input type="email" placeholder="Enter Email" class="form-control" ng-model="email"/>
                            </td>
                        </tr>
                        <tr>
                            <th>Address</th>
                            <td>
                                <input type="text" placeholder="Enter Address" class="form-control" ng-model="address"/>
                            </td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>
                                <button type="button" class="btn btn-success" ng-click="saveEmployee()">{{btnName}}</button>
                            </td>
                        </tr>

                    </table>
                </div>
                <div class="col-sm-6">
                    <h3>Employee List</h3>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Sl No.</th>
                                <th>Name</th>
                                <th>Mobile</th>
                                <th>Email</th>
                                <th>Address</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="m in empList">
                                <td>{{$index+1}}</td>
                                <td>{{m.Name}}</td>
                                <td>{{m.Mobile}}</td>
                                <td>{{m.Email}}</td>
                                <td>{{m.Addess}}</td>
                                <td>
                                    <button class="btn btn-sm btn-danger" ng-click="deleteData(m.EmployeeId)">Delete</button>
                                    <button class="btn btn-sm btn-success" ng-click="EditData(m)">Edit</button>
                                </td>
                            </tr>
                        </tbody>

                    </table>
                </div>

            </div>

        </div>
    </div>
</body>
</html>
